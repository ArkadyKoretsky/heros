{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/superheroes/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      { "name": "@nestjs/swagger", "options": { "introspectComments": true } }
    ],
    "webpack": true,
    "tsConfigPath": "apps/superheroes/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/superheroes",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "schedulers": {
      "type": "application",
      "root": "apps/schedulers",
      "entryFile": "main",
      "sourceRoot": "apps/schedulers/src",
      "compilerOptions": {
        "assets": [
          { "include": "../config/*.yaml", "outDir": "./dist/apps/schedulers" }
        ],
        "tsConfigPath": "apps/schedulers/tsconfig.app.json"
      }
    },
    "superheroes": {
      "type": "application",
      "root": "apps/superheroes",
      "entryFile": "main",
      "sourceRoot": "apps/superheroes/src",
      "compilerOptions": {
        "assets": [
          { "include": "../config/*.yaml", "outDir": "./dist/apps/superheroes" }
        ],
        "tsConfigPath": "apps/superheroes/tsconfig.app.json"
      }
    },
    "timers": {
      "type": "application",
      "root": "apps/timers",
      "entryFile": "main",
      "sourceRoot": "apps/timers/src",
      "compilerOptions": {
        "assets": [
          { "include": "../config/*.yaml", "outDir": "./dist/apps/timers" }
        ],
        "tsConfigPath": "apps/timers/tsconfig.app.json"
      }
    }
  }
}
